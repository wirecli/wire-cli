; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org


root = true


[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space

[*.{php,inc,module,json}]
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true


[*.js]
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true


[*.{css,less,scss}]
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true